.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

.bg {
  height: 100vh;
  border: none;
  margin:0 auto;
  display: block;
  border-radius: 6px;
  min-width: 100vw;
}

.button {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}