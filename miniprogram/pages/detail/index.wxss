.user-info {
  padding: 10rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.user-info .avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.user-info .nickName {
  flex:1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
  color: #666;
}

.description {
  background: #fff;
  padding: 10rpx 20rpx;
}

.description .description-item {
  padding: 5rpx 0;
  font-size: 15px;
  color: #363636;
}

.container {
  width: 750rpx;
  display: flex;
  font-size: 0;
}

.container .column {
  width: 48%;
  margin: 1%;
}

.column .column-item {
  margin-bottom: 10rpx;
  border-radius: 6px;
  overflow: hidden;
}

.column .img {
  width: 100%;
}

.btn-area {
  display: flex;
  justify-content: space-between;
  margin:0 20rpx;
}

.btn-area button {
  width: 48%;
  background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  color: #fff;
}