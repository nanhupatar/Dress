@import "../../style/animate.wxss";

.imageList-comtainer {
  box-sizing: border-box;
  width: 750rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0 0 40rpx #f4f4f4 inset;
}

.imageList-item {
    width: 350rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}

.imageList-item .cover-img-container {
  position: relative;
  overflow: hidden;
}

.cover-img-container .cover-img{
  width: 350rpx;
  height: 508rpx;
}

.imageList-item .user-info {
  display: flex;
  align-items: center;
  padding: 0 5px 5px 5px;
}

.user-info .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius:100px;
  margin-right: 5px;
}

.user-info .nickName {
  font-size: 30rpx;
  color: #AAAAAA;
  flex:1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}